{
    "include": ["**/*.ts", "**/*.tsx"],
    "compilerOptions": {
        "target": "ES2022",
        "lib": ["DOM", "DOM.Iterable", "ES2022"],
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": { "@/*": ["./src/*"] },
        "strict": true,
        "noEmit": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "types": ["vite/client"]
    }
}
